<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000"
    >

 <Button
    android:id="@+id/sd_browser_button"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"  
    android:text="SD Card Browser"
    android:textColor="#eee"
    android:onClick="onSDBrowserBtnClick"
    android:background="@android:color/transparent"
    android:gravity="left"
    android:padding="18dp"
    android:textSize="20sp"
 />
 <Button
    android:id="@+id/cloud_browser_button"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Cloud Browser"
    android:textColor="#eee"
    android:onClick="onCloudBtnClick"
    android:background="@android:color/transparent"
    android:gravity="left"
    android:padding="18dp"
    android:textSize="20sp"
 />
 
 <Button
    android:id="@+id/eniac_browser_button"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Eniac Browser"
    android:textColor="#eee"
    android:onClick="onEniacBtnClick"
    android:background="@android:color/transparent"
    android:gravity="left"
    android:padding="18dp"
    android:textSize="20sp"
 />

 <Button
     android:id="@+id/print_history_button"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"
     android:background="@android:color/transparent"
     android:gravity="left"
     android:onClick="onHistoryBtnClick"
     android:padding="18dp"
     android:text="Print History"
     android:textColor="#eee"
     android:textSize="20sp"
      />

</LinearLayout>
