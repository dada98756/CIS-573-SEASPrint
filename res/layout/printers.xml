<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height= "fill_parent" >
    
<TextView  
    android:layout_width="fill_parent" 
    android:gravity="center_horizontal"
    android:layout_height="wrap_content" 
    android:text="@string/printer_prompt"
 	android:padding="10dp"
 	android:textSize="15sp"
    />
<TextView
    android:layout_width="fill_parent"
    android:gravity="center_horizontal"
    android:layout_height="wrap_content"
    android:id="@+id/select_file_name"
    android:padding="10dp"
    />

<Spinner
    android:id="@+id/printer_spinner"
    android:layout_width="fill_parent"
    android:layout_height="50dp"
    android:gravity="center_horizontal"
    android:padding="5dp"
    android:prompt="@string/printer_prompt" />
        
<TextView  
	android:id = "@+id/number_label"
	android:gravity="center_horizontal"
    android:layout_width="fill_parent" 
    android:layout_height="50dp" 
    android:text="@string/number_prompt"
	android:textSize="15sp"
	android:paddingTop="15dp"
    />
    
  
<com.engineering.printer.NumberPicker
	android:gravity="center_horizontal"
   android:id="@+id/number_picker"
   android:orientation="horizontal"
   android:layout_width="fill_parent"
   android:layout_height="50dp"
   />

<CheckBox
    android:id="@+id/duplex_toggle_checkbox"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:text="Duplex Print" />

		<CheckBox 
		    android:id="@+id/timed_printing"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="Timed printing for SEAS rules" 
        />   

	   <CheckBox
	       android:id="@+id/save_print_options"
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:text="Save Print Options" />

